<div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
  <div class="card mkflr_card">
    <div class="mkflr_card_price d-flex align-items-center justify-content-center" style="color: <%= product.webcolour %>; border-color: <%= product.webcolour %>">
      <p>
        <%= number_to_currency (product.price) %>
      </p>
    </div>
    <div class="mkflr_product_pic">
      <% if product.product_pic.blank? %>
        <%= link_to product_path(product) do %>
          <%= image_tag "choco.png", class: "mkflr_product_pic_no_pic"%>
        <% end %>
      <% else %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.product_pic %>
        <% end %>
      <% end %>
    </div>
    <div class="mkflr_card_colour d-flex justify-content-center align-items-center" style="background-color: <%= product.webcolour %>">
      <h5 class="mkflr_card_heading">
        <%= product.name %>
      </h5>
    </div>
    <div class="mkflr_card_infos">

      <div class="mkflr_card_cart_controls">
        <%= simple_form_for @order_item, html: { class: "d-flex align-items-center justify-content-center", style: "" } do |f| %>
          <div class="mkflr_card_cart_controls_decrease">
            <i class="fas fa-minus"></i>
          </div>
          <%= f.input_field :product_id, value: product.id, as: :hidden %>
          <%= f.input_field :quantity, label: false, error: '–ú–æ–ª—è, –≤—ä–≤–µ–¥–µ—Ç–µ –≤–∞–ª–∏–¥–Ω–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ ‚ò∫Ô∏è', error_html: {} ,class: "mkflr_card_cart_controls_btn_quantity", input_html: { value: 1 }%>
          <div class="mkflr_card_cart_controls_increase">
             <i class="fas fa-plus"></i>
          </div>
          <%= f.button :submit, "–¥–æ–±–∞–≤–∏ –≤ üõí" ,class: "mkflr_card_cart_controls_btn" %>
        <% end %>
      </div>
      <p class="mkflr_card_infos_or_text">–∏–ª–∏</p>
      <div class="mkflr_card_infos_learn_more_btn" style="background-color: <%= product.webcolour %>" >
        <%= link_to product_path(product) do %>
          –Ω–∞—É—á–∏ –ø–æ–≤–µ—á–µ...
        <% end %>
      </div>
    </div>
  </div>
</div>
