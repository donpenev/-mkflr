<div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
  <div class="card mkflr_card">
    <div class="mkflr_card_price d-flex align-items-center justify-content-center" style="color: <%= product.webcolour %>; border-color: <%= product.webcolour %>">
      <p>
        <%= number_to_currency product.price %> лв.
      </p>
    </div>
    <div class="mkflr_product_pic">
      <% if product.product_pic.blank? %>
        <%= link_to product_path(product) do %>
          <%= image_tag "choco.png", class: "mkflr_product_pic_no_pic"%>
        <% end %>
      <% else %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.product_pic %>
        <% end %>
      <% end %>
    </div>
    <div class="mkflr_card_colour d-flex justify-content-center align-items-center" style="background-color: <%= product.webcolour %>">
      <h5 class="mkflr_card_heading">
        <%= product.name %>
      </h5>
    </div>
    <div class="mkflr_card_infos">
      <div class="mkflr_card_cart_controls d-flex justify-content-center align-items-center">
        <%= simple_form_for @order_item, html: { class: "d-flex justify-content-between align-items-center" } do |f| %>
          <%= f.input_field :product_id, value: product.id, as: :hidden %>
          <%= f.input_field :quantity, label: false, error: 'Моля, въведете валидно количество ☺️', placeholder: 1, error_html: {} ,class: "mkflr_card_cart_controls_btn_quantity"%>
          <%= f.button :submit, "добави в 🛒" ,class: "mkflr_card_cart_controls_btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
