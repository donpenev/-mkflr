<%= form_for(@order_item) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit "Send"%>
  </div>
<% end %>
